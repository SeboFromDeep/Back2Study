<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    
    <title><%=title %></title>
    
    <link rel="stylesheet" href="/css/stilo.css" media="screen"/>
    <!-- <link rel="stylesheet" href="public/css/stilo.css" media="screen"/> -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    
</head>

<body>
    <!--Centrar en bootstrap: https://codea.app/blog/centrar-div-boostrap -->
<!-- ENCABEADO Menu--> 
<%- include("menu") %>

<!-- CONTENIDO -->
    <div class="container contenido ">
        
        <div class="row vh-80 align-items-center">
            <div class="col"><h1 class="display-6">Tarea Programada</h1></div>
                
            <div class="col text-end"><input type="button" onclick="history.back()" name="volver atrás" value="Atrás" class="btn btn-light btn-sm"></div>
                
            <br>
        </div>
        
        <% let color="bg-secondary";%>
        <% if(tareaP){%>
            <% console.log(tareaP.horas) %>
            <% if(typeof(tareaP) !== "undefined"){%>
                <% tareaP.forEach(function(p) {%>   
                    <% if(p.prioridad == "ALTA"){
                            color="bg-danger";
                            
                        }
                        else if(p.prioridad == "MEDIA") {
                            color="bg-warning";
                            
                        }
                        else if(p.prioridad == "BAJA") {
                            color="bg-success";
                            
                        }%>
                    
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col"><a style=" text-decoration:none;" class="btn btn-outline-info disabled">
                        <b>#<%=idTarea%> <%=p.nombre%></b></a></div>
                    <!-- <div class="col">#<%=idTarea%> <b><%=p.nombre%></div></b> -->
                    <div class="col text-center"><small>Prioridad: <span class="badge <%=color%>"><%=p.prioridad%></span></small></div>
                    <div class="col text-end">Caduca <b><%=tiempoRest%></b></div>
                </div>
                 
            </div>
            <div class="card-body">
                <h6 class="card-title">Inicio: <b><%=p.fechaini.toLocaleDateString()%></b> Fin:<b><%=p.fechafin.toLocaleDateString()%></b></h6>
              <h5 class="card-text">Tarea <%=p.tipo%>. Duración <%=p.horas%> horas.     </h5>
              
              
            </div>
            <div class="card-footer text-muted">
                <%p.categoria.split('@').forEach( tag => {%>
                    <% if(tag != ''){%>
                        <a href="/tareas/porTag/<%=tag%>" class="badge bg-info">#<%=tag%></a>
                    <%} %>
                <%});%>
            </div>
          </div>
                    <%});%>
                <%}%>
            <%}%>
            
            
    </div>

    
    <%- include("footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>
</html>