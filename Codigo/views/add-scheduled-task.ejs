<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    
    <title></title>
    
    <link rel="stylesheet" href="/css/stilo.css" media="screen"/>
    <!-- <link rel="stylesheet" href="public/css/stilo.css" media="screen"/> -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    
</head>

<body>
    <!--Centrar en bootstrap: https://codea.app/blog/centrar-div-boostrap -->
<!-- ENCABEADO Menu--> 
<%- include("menu") %>

<!-- CONTENIDO -->
    <div class="container contenido ">
        
        <div class="col-auto bg-light p-5 rounded">
            <form action="/tareas/add_scheduled_task" method="POST" enctype="multipart/form-data">
                <h1 class="display-6 text-center">Añadir Tarea Programada</h1>
                
                <% let mensajeNombre=false;%>
                <% let controlNom="";%>

                <% let mensajePrioridad=false;%>
                <% let controlPrio="";%>

                <% let mensajeTipo=false;%>
                <% let controlTipo="";%>

                <% let mensajeHoras=false;%>
                <% let controlHoras="";%>

                <% let mensajefechaIni=false;%>
                <% let controlfechaIni="";%>

                <% if(typeof(errors) !== "undefined"){%>
                    
                    <% if(errors.nombre){%>
                        <% mensajeNombre=true;%>
                        <% controlNom="is-invalid";%>
                        
                    <%}%>
                    
                    <% if(errors.prioridad){%>
                        <% mensajePrioridad=true;%>
                        <% controlPrio="is-invalid";%>
                        
                    <%}%>
                    <% if(errors.tipo){%>
                        <% mensajeTipo=true;%>
                        <% controlTipo="is-invalid";%>
                        
                    <%}%>
                    <% if(errors.horas){%>
                        <% mensajeHoras=true;%>
                        <% controlHoras="is-invalid";%>
                        
                    <%}%>
                    <% if(errors.fechaIni){%>
                        <% mensajefechaIni=true;%>
                        <% controlfechaIni="is-invalid";%>
                        <div class="alert alert-danger" role="alert">
                            <%=errors.fechaIni.msg%>
                        </div>
                    <%}%>
                    <% if(errors.fechaFin){%>
                        <div class="alert alert-danger" role="alert">
                            <%=errors.fechaFin.msg%>
                        </div>
                    <%}%>
                <%}%>

                <div class="row input-group p-2">
                    <!-- <input type="text" name="nombre" class="form-control" id="floatingInput" placeholder="Nombre de la Tarea">   -->
                    <div class="col-4">
                        <input type="text" name="nombre" class="form-control <%=controlNom%>" id="floatingInput" placeholder="Nombre de la Tarea">
                        <% if(mensajeNombre){%>
                            <div class="invalid-feedback">
                                <%=errors.nombre.msg;%>
                            </div>
                        <%}%>
                    </div>
                    <div class="col input-group">
                        <span class="input-group-text">Fecha Inicio y final</span>
                        <input type="date" class="form-control" name="fechaIni">
                        <input type="date" class="form-control" name="fechaFin">
                    </div>  
                </div>
                <div class="row input-group p-2">
                    <div class="col btn-group <%=controlPrio%>" role="group" aria-label="Selector de prioridad">
                        <input type="radio" class="btn-check" name="prioridad" value="BAJA" id="btnradio1" autocomplete="off">
                        <label class="btn btn-outline-success" for="btnradio1">Baja</label>
                      
                        <input type="radio" class="btn-check" name="prioridad" value="MEDIA" id="btnradio2" autocomplete="off">
                        <label class="btn btn-outline-warning" for="btnradio2">Media</label>
                      
                        <input type="radio" class="btn-check" name="prioridad" value="ALTA" id="btnradio3" autocomplete="off">
                        <label class="btn btn-outline-danger" for="btnradio3">Alta</label>
                        
                        
                    </div>
                    <% if(mensajePrioridad){%>
                        <div class="col invalid-feedback">
                            <%=errors.prioridad.msg;%>
                        </div>
                    <%}%>

                    <input type="text" class="col form-control" name="categoria" id="formGroupExampleInput" placeholder="@Categoria">
                </div>
                <div class="row input-group p-2">
                    
                        <div class="col btn-group <%=controlTipo%>" role="group" aria-label="Selector de prioridad">
                            <input type="radio" class="btn-check" name="tipo" value="DIARIA" id="btnradio1tipo" autocomplete="off">
                            <label class="btn btn-outline-dark" for="btnradio1tipo">Diaria</label>
                          
                            <input type="radio" class="btn-check" name="tipo" value="SEMANAL" id="btnradio2tipo" autocomplete="off">
                            <label class="btn btn-outline-info" for="btnradio2tipo">Semanal</label>
                        </div>
                        <% if(mensajeTipo){%>
                            <div class="col invalid-feedback">
                                <%=errors.tipo.msg;%>
                            </div>
                        <%}%>
                    
                    
                    <div class="col">
                        <input class="form-control <%=controlHoras%>" type="text" name="horas" id="floatingInput" placeholder="Número de horas">
                        <% if(mensajeHoras){%>
                        <div class="invalid-feedback">
                            <%=errors.horas.msg%>
                        </div>
                        <%}%>
                    </div>
                    
                </div>
                
                <br>
                <button type="submit"class="btn btn-primary w-100">Añadir</button>
            </form>
        </div>
        
            
    </div>

    
    <%- include("footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>
</html>